<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffefe">

    <!-- Yuvarlak görünüm Glide circleCrop ile olacak -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adı"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/view1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/followersnumbers"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takipçi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/followersnumbers"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@id/view1"
        android:textColor="@color/teal_700"
        android:id="@+id/followersnumberstext"
        />


    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="@id/followersnumbers"
        app:layout_constraintEnd_toStartOf="@id/followednumbers"
        app:layout_constraintStart_toEndOf="@id/followersnumbers"
        app:layout_constraintTop_toTopOf="@id/followersnumbers" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:textSize="23dp"
        app:layout_constraintEnd_toStartOf="@id/view2"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/followednumbers"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takip Edilen"
        app:layout_constraintStart_toEndOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/followersnumbers"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@id/view2"
        android:textColor="@color/teal_700"
        android:id="@+id/followednumberstext"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anı Sayısı"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/followersnumbers"
        android:textSize="15dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/teal_700"
        android:id="@+id/memoryCount"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/followersnumbers"
        app:layout_constraintBottom_toBottomOf="@id/followersnumbers"
        app:layout_constraintStart_toEndOf="@id/followednumbers"
        app:layout_constraintEnd_toStartOf="@id/memorynumbers"
        android:background="@color/teal_700"
        android:id="@+id/view2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintStart_toEndOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/memorynumbers"
        />

    <Button
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.45"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/changeProfileSettings"
        android:gravity="center"
        android:text="Profili Düzenle"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/followednumberstext"
        android:background="@drawable/textdrawable"
        android:padding="15dp"
        app:layout_constraintEnd_toStartOf="@id/messageButton"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/changeProfileSettings"
        android:id="@+id/messageButton"
        android:text="Başarımlar"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/followednumberstext"
        android:background="@drawable/textdrawable"
        android:padding="15dp"
        app:layout_constraintWidth_percent="0.45"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sharedMemories"
        app:layout_constraintStart_toStartOf="@id/changeProfileSettings"
        app:layout_constraintEnd_toEndOf="@id/messageButton"
        app:layout_constraintTop_toBottomOf="@id/messageButton"
        android:background="@drawable/textdrawable"
        android:text="Paylaşılan Anılar"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.065"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sharedMemories"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
