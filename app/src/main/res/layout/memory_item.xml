            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonStopAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durdur"
            android:visibility="gone"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
