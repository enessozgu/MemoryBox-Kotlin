<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.badges.BadgeFragment">

    <!-- Başlık -->
    <TextView
        android:id="@+id/badgesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rozetlerim"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- İstatistik -->
    <TextView
        android:id="@+id/badgeStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Açık: 0  •  Kilitli: 0"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/badgesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Liste -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/badgesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/badgeStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_badge" />

    <!-- Yükleniyor göstergesi (overlay) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/badgesRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/badgesRecyclerView"
        app:layout_constraintStart_toStartOf="@id/badgesRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/badgesRecyclerView" />

    <!-- Boş durum (overlay) -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Henüz rozet yok."
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/badgesRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/badgesRecyclerView"
        app:layout_constraintStart_toStartOf="@id/badgesRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/badgesRecyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>
